@model List<ParsedElement>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parsed XML Data</title>
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <!-- Scripts - Note the correct order -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Parsed XML Data</h1>
        <table id="parsedDataTable" class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Element Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="2" class="text-center">No data available</td>
                    </tr>
                }
                else
                {
                    @foreach (var element in Model)
                    {
                        <tr>
                            <td>@element.ElementName</td>
                            <td>@element.Description</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function() {
            $('#parsedDataTable').DataTable();
        });
    </script>
</body>
</html>
